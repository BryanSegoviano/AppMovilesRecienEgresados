<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_empleo">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="202dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/logo_oracle" />

    <TextView
        android:id="@+id/tv_puesto"
        android:layout_width="280dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Puesto"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintVertical_bias="0.034" />

    <TextView
        android:id="@+id/tv_exp"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginStart="36dp"
        android:text="Experiencia"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/tv_ubicacion"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:text="UbicaciÃ³n"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/tv_exp"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/tv_requisitos"
        android:layout_width="337dp"
        android:layout_height="106dp"
        android:text="Requisitos"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_puesto"
        app:layout_constraintVertical_bias="0.161" />

    <TextView
        android:id="@+id/tv_horario"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:text="Horario"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_requisitos"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="337dp"
        android:layout_height="75dp"
        android:text="Descripcion"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_horario"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/tv_sueldo"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:text="Sueldo"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc"
        app:layout_constraintVertical_bias="0.089" />


</androidx.constraintlayout.widget.ConstraintLayout>